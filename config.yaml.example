# WeatherClock Pi Configuration File
# Copy this file to ~/.config/weatherclock/config.yaml and customize

# Location settings for weather data
# You can specify coordinates manually or leave as null for auto-detection
location:
  latitude: 40.7128   # e.g., 40.7128 for New York City
  longitude: -74.0060 # e.g., -74.0060 for New York City
  name: "New York, NY"         # Display name for weather location

# Display settings
display:
  # Temperature unit: "fahrenheit" or "celsius"
  temperature_unit: "fahrenheit"
  
  # Time format: "12h" or "24h"
  time_format: "12h"
  
  # Show seconds in main clock display
  show_seconds: true
  
  # Theme: "dark" or "light"
  theme: "dark"

# Refresh settings
refresh:
  # Weather data refresh interval in seconds (minimum 300 = 5 minutes)
  weather_interval: 900  # 15 minutes
  
  # Seconds before forecast view auto-returns to main view
  forecast_timeout: 30

# Timezone configuration for the 3 clocks
# Use IANA timezone names (e.g., "America/New_York", "Europe/London")
timezones:
  # Main clock (large, left side)
  main:
    timezone: "America/New_York"
    label: "New York"
    country: "USA"
  
  # Secondary clock 1 (top-right card)
  secondary_1:
    timezone: "Europe/London"
    label: "London"
    country: "UK"
  
  # Secondary clock 2 (bottom-right card)
  secondary_2:
    timezone: "Asia/Tokyo"
    label: "Tokyo"
    country: "Japan"
